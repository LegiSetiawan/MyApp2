<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:padding="15dp"
    tools:context=".activity.InputActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
    <EditText
        android:id="@+id/inNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_in"
        android:textColor="@color/txcolor"
        android:hint="Nama"/>
    <EditText
        android:id="@+id/inHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_in"
        android:textColor="@color/txcolor"
        android:layout_below="@id/inNama"
        android:hint="harga"/>
    <EditText
        android:id="@+id/inSatuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_in"
        android:textColor="@color/txcolor"
        android:layout_below="@id/inHarga"
        android:hint="satuan"/>
    <EditText
        android:id="@+id/inTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_in"
        android:textColor="@color/txcolor"
        android:layout_below="@+id/inSatuan"
        android:hint="total"/>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear"
        android:text="@string/save"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_toRightOf="@+id/save"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel"/>

</RelativeLayout>